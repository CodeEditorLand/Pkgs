{
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@taplo/cli": "^0.5.2",
		"cross-env": "^7.0.3",
		"cspell": "^6.31.1",
		"lerna": "^8.0.2",
		"lint-staged": "^13.2.3"
	},
	"funding": {
		"type": "opencollective",
		"url": "https://opencollective.com/swc"
	},
	"lint-staged": {
		"!(**/tests/**/*)*.js": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.jsx": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.ts": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.tsx": [
			"prettier --write"
		],
		"**": [
			"prettier --write --ignore-unknown"
		],
		"*.rs": [
			"rustfmt --"
		],
		"*.toml": [
			"taplo format"
		]
	},
	"name": "swc-extra-packages-workspace",
	"scripts": {
		"prepare": "husky install && git config feature.manyFiles true"
	}
}
